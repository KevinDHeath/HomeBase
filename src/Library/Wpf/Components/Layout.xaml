<UserControl x:Class="Library.Wpf.Components.Layout"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:ui="clr-namespace:Library.Wpf.Components"
             xmlns:vm="clr-namespace:Library.Core.ViewModels;assembly=Library.Core"
             d:Background="{StaticResource appBackground}"
             d:DataContext="{d:DesignInstance Type=vm:LayoutViewModel}"
             d:DesignHeight="250"
             d:DesignWidth="800"
             DataContextChanged="ContextChanged"
             mc:Ignorable="d">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>

    <ui:NavigationMenu x:Name="Format"
                       Grid.RowSpan="2"
                       DataContext="{Binding NavigationViewModel}"/>
    <ContentControl Grid.Row="1"
                    MaxWidth="1000"
                    Margin="20"
                    Content="{Binding ContentViewModel}"
                    Visibility="Hidden"/>
  </Grid>

</UserControl>