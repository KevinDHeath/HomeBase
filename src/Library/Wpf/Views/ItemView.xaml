<UserControl x:Class="Library.Wpf.Views.ItemView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:cc="clr-namespace:Common.Wpf.Controls;assembly=Common.Wpf.Controls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:vm="clr-namespace:Library.Core.ViewModels;assembly=Library.Core"
             d:Background="{StaticResource appBackground}"
             d:DataContext="{d:DesignInstance Type=vm:ItemViewModel}"
             d:DesignHeight="450"
             d:DesignWidth="800"
             mc:Ignorable="d">
  <Grid Margin="5">
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="Auto"/>
      <ColumnDefinition Width="*"/>
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>
    <Grid.Resources>
      <sys:Double x:Key="width">300</sys:Double>
    </Grid.Resources>

    <TextBlock Grid.Row="0"
               Style="{StaticResource appViewTitleStyle}"
               Text="Item"/>

    <TextBlock Grid.Row="1"
               Style="{StaticResource appLabelStyle}"
               Text="Author:"/>
    <TextBox Grid.Row="1"
             Grid.Column="1"
             Width="{StaticResource width}"
             Style="{StaticResource appTextBoxStyle}"
             Text="{Binding Author, UpdateSourceTrigger=PropertyChanged}"/>
    <TextBlock Grid.Row="2"
               Style="{StaticResource appLabelStyle}"
               Text="Title:"/>
    <TextBox Grid.Row="2"
             Grid.Column="1"
             Width="{StaticResource width}"
             Style="{StaticResource appTextBoxStyle}"
             Text="{Binding Title, UpdateSourceTrigger=PropertyChanged}"/>
    <TextBlock Grid.Row="3"
               Style="{StaticResource appLabelStyle}"
               Text="Created:"/>
    <cc:DatePicker Name="dpDate"
                   Grid.Row="3"
                   Grid.Column="1"
                   Width="{StaticResource width}"
                   Margin="3"
                   HorizontalAlignment="Left"
                   Style="{DynamicResource controlDatePickerStyle}">
      <DatePicker.SelectedDate>
        <Binding Converter="{StaticResource StringToDateTime}"
                 ConverterParameter="MMMM dd, yyyy"
                 Path="Date"
                 UpdateSourceTrigger="PropertyChanged"/>
      </DatePicker.SelectedDate>
    </cc:DatePicker>

    <TextBlock Grid.Row="4"
               Style="{StaticResource appLabelStyle}"
               Text="File:"/>
    <TextBox Grid.Row="4"
             Grid.Column="1"
             Width="{StaticResource width}"
             Style="{StaticResource appTextBoxStyle}"
             Text="{Binding File, UpdateSourceTrigger=PropertyChanged}"/>
    <TextBlock Grid.Row="5"
               Style="{StaticResource appLabelStyle}"
               Text="Status:"/>
    <cc:ComboBox Grid.Row="5"
                 Grid.Column="1"
                 MinWidth="200"
                 IsErrorShown="True"
                 ItemsSource="{Binding Categories}"
                 Style="{StaticResource appLayoutStyle}">
      <ComboBox.SelectedItem>
        <Binding Path="Status" UpdateSourceTrigger="PropertyChanged"/>
      </ComboBox.SelectedItem>
    </cc:ComboBox>

    <StackPanel Grid.Row="6"
                Grid.ColumnSpan="2"
                HorizontalAlignment="Right"
                Orientation="Horizontal">
      <Button Command="{Binding ApplyChangesCommand}"
              Content="Apply"
              Style="{StaticResource commonButtonStyle}"/>
      <Button Command="{Binding CancelCommand}"
              Content="Cancel"
              Style="{StaticResource commonButtonStyle}"/>
    </StackPanel>
  </Grid>
</UserControl>
