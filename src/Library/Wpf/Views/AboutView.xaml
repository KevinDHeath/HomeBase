<UserControl x:Class="Library.Wpf.Views.AboutView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:Library.Core.ViewModels;assembly=Library.Core"
             d:DataContext="{d:DesignInstance Type=vm:AboutViewModel}"
             d:DesignHeight="450"
             d:DesignWidth="600"
             Background="{StaticResource appBackground}"
             mc:Ignorable="d">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>

    <TextBlock Grid.Row="0"
               Style="{StaticResource appViewTitleStyle}"
               Text="{Binding Title, Mode=OneWay}"/>
    <TextBlock Grid.Row="1"
               Margin="0,5,0,2"
               Text="{Binding Description, Mode=OneWay}"/>
    <TextBlock Grid.Row="2" Margin="0,5,0,10">
      <Run Text="Version "/><Run Text="{Binding FileVersion, Mode=OneWay}"/>
      <Run FontStyle="Italic" Text="("/><Run FontStyle="Italic" Text="{Binding Configuration, Mode=OneWay}"/><Run FontStyle="Italic" Text=")"/>
      <Run Text="for "/><Run Text="{Binding FrameworkName, Mode=OneWay}"/><LineBreak/>
      <Run Text="{Binding Copyright, Mode=OneWay}"/>
    </TextBlock>

    <Grid Grid.Row="3">
      <Grid.RowDefinitions>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="Auto"/>
      </Grid.RowDefinitions>
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="Auto"/>
        <ColumnDefinition Width="Auto"/>
      </Grid.ColumnDefinitions>
      <TextBlock Grid.Row="0"
                 Style="{StaticResource appLabelStyle}"
                 Text="Library file:"/>
      <TextBlock Grid.Row="0"
                 Grid.Column="1"
                 Style="{StaticResource appLabelStyle}"
                 Text="{Binding MainFile, Mode=OneWay}"/>
      <TextBlock Grid.Row="1"
                 Margin="0,0,0,10"
                 VerticalAlignment="Bottom"
                 Style="{StaticResource appLabelStyle}"
                 Text="Merge path:"/>
      <TextBlock Grid.Row="1"
                 Grid.Column="1"
                 Margin="0,0,0,10"
                 VerticalAlignment="Bottom"
                 Text="{Binding MergePath, Mode=OneWay}"/>
      <TextBlock Grid.Row="2"
                 Margin="0,0,6,0"
                 VerticalAlignment="Bottom"
                 Style="{StaticResource appLabelStyle}"
                 Text="Sections count:"/>
      <TextBlock Grid.Row="2"
                 Grid.Column="1"
                 VerticalAlignment="Bottom"
                 Text="{Binding SectionsCount, StringFormat='#,#', Mode=OneWay}"/>
      <TextBlock Grid.Row="3"
                 Margin="0,0,6,0"
                 VerticalAlignment="Bottom"
                 Style="{StaticResource appLabelStyle}"
                 Text="Authors count:"/>
      <TextBlock Grid.Row="3"
                 Grid.Column="1"
                 VerticalAlignment="Bottom"
                 Text="{Binding AuthorsCount, StringFormat='#,#', Mode=OneWay}"/>
      <TextBlock Grid.Row="4"
                 Margin="0,0,6,0"
                 VerticalAlignment="Bottom"
                 Style="{StaticResource appLabelStyle}"
                 Text="Items count:"/>
      <TextBlock Grid.Row="4"
                 Grid.Column="1"
                 VerticalAlignment="Bottom"
                 Text="{Binding ItemsCount, StringFormat='#,#', Mode=OneWay}"/>
      <TextBlock Grid.Row="5"
                 Margin="0,0,6,0"
                 VerticalAlignment="Bottom"
                 Style="{StaticResource appLabelStyle}"
                 Text="Merge count:"/>
      <TextBlock Grid.Row="5"
                 Grid.Column="1"
                 VerticalAlignment="Bottom"
                 Text="{Binding MergeCount, StringFormat='#,#0', Mode=OneWay}"/>
    </Grid>
    <StackPanel Grid.Row="5"
                Grid.ColumnSpan="2"
                HorizontalAlignment="Left"
                Orientation="Horizontal">
      <Button Width="Auto"
              MinWidth="120"
              Margin="0,10,0,0"
              Padding="5"
              Background="White"
              Command="{Binding NavigateSettingsCommand}"
              Content="Change Settings"
              Style="{StaticResource commonButtonStyle}"/>
    </StackPanel>

  </Grid>
</UserControl>