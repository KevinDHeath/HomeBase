<UserControl x:Class="Library.Wpf.Views.MergeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:cc="clr-namespace:Common.Wpf.Controls;assembly=Common.Wpf.Controls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:Library.Core.ViewModels;assembly=Library.Core"
             d:DataContext="{d:DesignInstance Type=vm:MergeViewModel}"
             d:DesignHeight="450"
             d:DesignWidth="800"
             Background="{StaticResource appBackground}"
             mc:Ignorable="d">
  <Grid Margin="0,5,0,0">
    <Grid.RowDefinitions>
      <RowDefinition Height="*"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>
    <cc:SortableListView Grid.Row="0"
                         MinWidth="400"
                         MinHeight="400"
                         MaxHeight="800"
                         DefaultColumn="1"
                         ItemsSource="{Binding MergeItems}"
                         SelectionMode="Single"
                         Style="{StaticResource appListViewStyle}">
      <ListView.View>
        <GridView>
          <GridViewColumn Width="35" Header="Act">
            <GridViewColumn.CellTemplate>
              <DataTemplate>
                <CheckBox Command="{Binding DataContext.ActChangedCommand, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type UserControl}}}"
                          IsChecked="{Binding Merge, Mode=TwoWay}"
                          IsEnabled="{Binding CanMerge}"
                          Style="{StaticResource commonCheckBoxStyle}"/>
              </DataTemplate>
            </GridViewColumn.CellTemplate>
          </GridViewColumn>
          <GridViewColumn Width="320"
                          DisplayMemberBinding="{Binding Item.Title}"
                          Header="Title"
                          HeaderContainerStyle="{StaticResource appGridColumnHeaderStyle}"/>
          <GridViewColumn Width="250"
                          DisplayMemberBinding="{Binding Item.Section}"
                          Header="Section"
                          HeaderContainerStyle="{StaticResource appGridColumnHeaderStyle}"/>
          <GridViewColumn Width="200"
                          DisplayMemberBinding="{Binding Error}"
                          Header="Error"
                          HeaderContainerStyle="{StaticResource appGridColumnHeaderStyle}"/>
        </GridView>
      </ListView.View>
    </cc:SortableListView>
    <StackPanel Grid.Row="1"
                HorizontalAlignment="Right"
                Orientation="Horizontal">
      <Button Command="{Binding ApplyChangesCommand}"
              Content="Apply"
              Style="{StaticResource commonButtonStyle}"/>
      <Button Command="{Binding CancelCommand}"
              Content="Cancel"
              Style="{StaticResource commonButtonStyle}"/>
    </StackPanel>
  </Grid>
</UserControl>
