<UserControl x:Class="Library.Wpf.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:cc="clr-namespace:Common.Wpf.Controls;assembly=Common.Wpf.Controls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:Library.Core.ViewModels;assembly=Library.Core"
             d:Background="{StaticResource appBackground}"
             d:DataContext="{d:DesignInstance Type=vm:SettingsViewModel}"
             d:DesignHeight="450"
             d:DesignWidth="800"
             mc:Ignorable="d">
  <Grid Margin="5">
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="Auto"/>
      <ColumnDefinition Width="*"/>
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>
    <TextBlock Grid.Row="0"
               Style="{StaticResource appViewTitleStyle}"
               Text="Settings"/>
    <TextBlock Grid.Row="1"
               Style="{StaticResource appLabelStyle}"
               Text="Font size:"/>
    <cc:NumericSpinner Grid.Row="1"
                       Grid.Column="1"
                       MinWidth="70"
                       MaxWidth="380"
                       Decimals="0"
                       IsErrorShown="True"
                       Step="1"
                       Style="{StaticResource appLayoutStyle}"
                       Text="{Binding FontSize, UpdateSourceTrigger=PropertyChanged}"/>
    <TextBlock Grid.Row="2"
               Style="{StaticResource appLabelStyle}"
               Text="Root path:"/>
    <cc:FilePathTextBox x:Name="tbRootPath"
                        Grid.Row="2"
                        Grid.Column="1"
                        HorizontalAlignment="Stretch"
                        DialogType="Folder"
                        IsReadOnly="True"
                        Style="{StaticResource appLayoutStyle}"
                        Text="{Binding RootPath, UpdateSourceTrigger=PropertyChanged}"/>
    <TextBlock Grid.Row="3"
               Style="{StaticResource appLabelStyle}"
               Text="Main file:"/>
    <cc:FilePathTextBox x:Name="tbMainFile"
                        Grid.Row="3"
                        Grid.Column="1"
                        HorizontalAlignment="Stretch"
                        IsReadOnly="True"
                        RelativePath="{Binding ElementName=tbRootPath, Path=Text}"
                        Style="{StaticResource appLayoutStyle}"
                        Text="{Binding MainFile, UpdateSourceTrigger=PropertyChanged}"/>
    <TextBlock Grid.Row="4"
               Style="{StaticResource appLabelStyle}"
               Text="New items path:"/>
    <cc:FilePathTextBox x:Name="tbNewPath"
                        Grid.Row="4"
                        Grid.Column="1"
                        HorizontalAlignment="Stretch"
                        DialogType="Folder"
                        IsReadOnly="True"
                        RelativePath="{Binding ElementName=tbRootPath, Path=Text}"
                        Style="{StaticResource appLayoutStyle}"
                        Text="{Binding NewPath, UpdateSourceTrigger=PropertyChanged}"/>
    <TextBlock Grid.Row="5"
               Style="{StaticResource appLabelStyle}"
               Text="Item viewer:"/>
    <cc:FilePathTextBox x:Name="tbItemViewer"
                        Grid.Row="5"
                        Grid.Column="1"
                        HorizontalAlignment="Stretch"
                        IsReadOnly="True"
                        Style="{StaticResource appLayoutStyle}"
                        Text="{Binding ItemViewer, UpdateSourceTrigger=PropertyChanged}"/>
    <TextBlock Grid.Row="6"
               Style="{StaticResource appLabelStyle}"
               Text="Backup on save:"/>
    <StackPanel Grid.Row="6"
                Grid.Column="1"
                HorizontalAlignment="Left"
                Orientation="Horizontal">
      <CheckBox Name="cbBackup"
                Margin="0,6,0,0"
                IsChecked="{Binding Path=Backup, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                Style="{StaticResource commonCheckBoxStyle}"/>
    </StackPanel>
    <StackPanel Grid.Row="7"
                Grid.ColumnSpan="2"
                HorizontalAlignment="Right"
                Orientation="Horizontal">
      <Button Command="{Binding ApplyChangesCommand}"
              Content="Apply"
              Style="{StaticResource commonButtonStyle}"/>
      <Button Command="{Binding CancelCommand}"
              Content="Cancel"
              Style="{StaticResource commonButtonStyle}"/>
    </StackPanel>
  </Grid>
</UserControl>